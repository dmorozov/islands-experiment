{
  // Spell Checker
  "cSpell.words": ["Cacheable", "Flyway", "Ingestor", "jdbc", "quarkus", "astro", "preact", "nanostores", "orval", "shadcn", "tanstack"],

  // Editor Configuration
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  "editor.detectIndentation": false,
  "editor.insertSpaces": true,
  "editor.tabSize": 2,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": "active",

  // File Associations
  "files.associations": {
    "*.astro": "astro"
  },

  // ESLint Configuration
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "astro"
  ],
  "eslint.workingDirectories": [
    "./quarkus-astro-app/src/main/webui"
  ],

  // Language-Specific Formatters
  "[java]": {
    "editor.defaultFormatter": "redhat.java"
  },
  "[xml]": {
    "editor.defaultFormatter": "redhat.vscode-xml"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[astro]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // TypeScript Configuration
  "typescript.format.enable": false,

  // Tailwind CSS IntelliSense
  "tailwindCSS.experimental.classRegex": [
    ["cn\\(([^)]*)\\)", "[\"'`]([^\"'`]*).*?[\"'`]"]
  ],

  // Java Configuration
  "java.configuration.updateBuildConfiguration": "automatic",
  "java.format.settings.url": "./build-tools/src/main/resources/product/eclipse-java-google-style.xml",
  "java.format.settings.profile": "GoogleStyle",
  "java.compile.nullAnalysis.mode": "automatic",
  "javaPMD.rulesets": [
    "./build-tools/src/main/resources/product/pmd-ruleset.xml"
  ],
  "java.format.enabled": true,
  "java.checkstyle.configuration": "${workspaceFolder}/build-tools/src/main/resources/product/checkstyle.xml",
  "java.checkstyle.version": "10.19.0",
  "java.jdt.ls.vmargs": "-XX:+UseParallelGC -XX:GCTimeRatio=4 -XX:AdaptiveSizePolicyWeight=90 -Dsun.zip.disableMemoryMapping=true -Xmx2G -Xms100m -Xlog:disable",
  "java.test.config": [
    {
      "name": "MyCustomTestConfig",
      "vmArgs": ["--add-modules=jdk.incubator.vector"],
      "args": ["--enable-preview"]
    }
  ],
  "java.test.defaultConfig": "MyCustomTestConfig",

  // Telemetry
  "telemetry.enableTelemetry": false,
  "telemetry.telemetryLevel": "off",

  // File Exclusions
  "files.exclude": {
    "**/.git": true,
    "**/node_modules": true,
    "**/target": true,
    "**/.astro": true,
    "**/dist": true
  },

  // Search Exclusions
  "search.exclude": {
    "**/node_modules": true,
    "**/target": true,
    "**/.astro": true,
    "**/dist": true,
    "**/package-lock.json": true
  }
}
